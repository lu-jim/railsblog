<section class="login container flex flex-column justify-content-center">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mt-2 ">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-3' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control mb-3' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, class:"form-check-label mb-3"  %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'submit btn btn-primary mb-3'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>
<section class="container">
<% flash.each do |type, msg| %>
      <div class="alert alert-<%= type == 'alert' ? 'danger' : type %>">
        <%= msg %>
      </div>
    <% end %>
</section>