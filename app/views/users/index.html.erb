<header class="header">
<h1>Users!</h1>
<p>Here is a list of users</p>
</header>

<section class="container">
  <% @users.each do |user| %>
  <div class="user-card">
    <%= image_tag user.photo, class: "user-avatar"%>
    <span>
      <h2 class="user-title"><a href="/users/<%= user.id%>"> <%= user.name %> </a></h2>
      <p class="user-post-counter">Number of posts: <%= user.post_counter|| '0' %></p>
    </span>
  </div>
  <% end %>
</section>

<section class="container">
<div class="user-interaction">
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    <a href=<%= new_user_path(@user) %> class="user-link">
      Create new user
    </a>
    <%= form_with model: @user, url: path(@user), method: :post, local: true do |form| %>
      <%= form.submit "Create Post", class: 'submit' %>
    <% end %>
  </div>
</section>