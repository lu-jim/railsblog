<div class="container">
<%= render 'shared/user' %>
</div>

<section class="container pt-3">
<h2>Bio</h2>
<p><%= @user.bio %></p>
</section>
<section class="container">
  <% @posts.each do |post| %>
    <div class="card py-2 px-4">
    <h2 class="post-title"><a href="<%= post.author_id%>/posts/<%= post.id%>"> <%= post.title %> </a></h2>
    <span>
      <p><%= post.text|| '0' %></p>
      <span class="flex flex-row-reverse">
      <p class="counter mx-2"> Likes: <%= post.like_counter|| '0' %></p>
      <p class="counter"> Comments: <%= post.comment_counter|| '0' %></p>
      </span>

    </span>
  </div>
  <div class="card mt-2 mb-4">
  <div class="px-4 py-2">

  <% post.comments.each do |comment| %>
    <p><%= User.find(comment.author_id).name ||'' %>: <%= comment.text ||'Be the first to submit a comment' %></p>
  <% end %>
  </div>
  </div>
  <% end %>
</section>