<section>
<%= image_tag @user.photo, class: "user-avatar", size: "128"%>
<h1> User <%= @user.id %></h1>
<p class="user-post-counter"> Number of posts: <%= @user.post_counter|| '0' %></p>
</section>

<section id="bio-container">
<p><%= @user.bio %></p>
</section>
<section id="post-container">
  <% Post.all.each do |post| %>
    <div class="post-card"> <h2 class="post-title"><a href="<%= @user.id%>/posts/<%= post.id%>">
      <%= post.title %>
      </a></h2>
      <p class="like-counter"> Likes: <%= post.like_counter|| '0' %></p>
      <p class="comment-counter"> Comments: <%= post.comment_counter|| '0' %></p>
    </div>
  <% end %>
</section>