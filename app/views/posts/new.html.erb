<section class="post_container">
  <%= form_with(model: @post, :html => {:class => 'new_post'}, url: user_posts_path, method: :post, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title, class: 'label' %><br>
      <%= form.text_field :title, class: 'field' %>
    </div>

    <div class="form-group">
      <%= form.label :text, class: 'label' %><br>
      <%= form.text_area :text, class: 'field' %>
    </div>

    <%= form.submit "Add Post", class: 'submit' %>

  <% end %>
</section>